<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    
    spacing="20"
    style="-fx-background-color: white; -fx-padding: 40;">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Gym Management System"
            style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: black;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Profile" onAction="#handleProfile"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;"
            prefWidth="100" prefHeight="35" />
        <Button text="Đăng xuất" onAction="#handleLogout"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;"
            prefWidth="100" prefHeight="35" />
    </HBox>

    <Separator />

    <VBox spacing="15" alignment="CENTER_LEFT">
        <Label fx:id="welcomeLabel"
            style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: black;" />
        <Label fx:id="roleLabel" style="-fx-font-size: 18px; -fx-text-fill: black;" />
    </VBox>

</VBox>